<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:MainVM x:Key="VM"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource ResourceKey=VM}" Background="#336699">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding Path=Input, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Grid.Row="1" Background="#999999" Margin="5"></TextBox>
        <Button Grid.Column="0" Grid.Row="2" Height="50" Content="Clear" FontSize="25" FontWeight="Bold" Command="{Binding Path=CMD_Clear}"></Button>
        <Button Grid.Column="1" Grid.Row="2" Height="50" Content="Add" FontSize="25" FontWeight="Bold" Command="{Binding Path=CMD_Add}"></Button>
        <ListBox Grid.Row="0" Grid.Column="0" ItemsSource="{Binding Path=Elements}" Margin="5" Background="#666666"></ListBox>
        <TextBlock Grid.Row="0" Grid.Column="1"></TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="2"></TextBlock>
    </Grid>
    
</Window>
